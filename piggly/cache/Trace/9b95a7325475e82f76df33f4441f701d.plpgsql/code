DECLARE
    res boolean;
BEGIN
    perform public.piggly_branch($PIGGLY$1be7c1fde39ef09c$PIGGLY$);
    SELECT x.indisclustered
      FROM pg_catalog.pg_index x
      JOIN pg_catalog.pg_class ct ON ct.oid = x.indrelid
      JOIN pg_catalog.pg_class ci ON ci.oid = x.indexrelid
     WHERE ct.relname = $1
       AND ci.relname = $2
      INTO res;

      perform public.piggly_branch($PIGGLY$340bc0087094bb94$PIGGLY$);RETURN ok(
          COALESCE(res, false),
          'Table ' || quote_ident($1) || ' should be clustered on index ' || quote_ident($2)
      );
END;