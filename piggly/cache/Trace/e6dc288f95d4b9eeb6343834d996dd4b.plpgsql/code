DECLARE
    aname name;
BEGIN
    perform public.piggly_branch($PIGGLY$f5ccf02e53ee3c80$PIGGLY$);
    SELECT am.amname
      FROM pg_catalog.pg_index x
      JOIN pg_catalog.pg_class ct ON ct.oid = x.indrelid
      JOIN pg_catalog.pg_class ci ON ci.oid = x.indexrelid
      JOIN pg_catalog.pg_am am    ON ci.relam = am.oid
     WHERE ct.relname = $1
       AND ci.relname = $2
      INTO aname;

      perform public.piggly_branch($PIGGLY$40fc85b105843b1c$PIGGLY$);return is(
          aname, $3,
          'Index ' || quote_ident($2) || ' should be a ' || quote_ident($3) || ' index'
      );
END;